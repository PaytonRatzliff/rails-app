<p id="notice"><%= notice %></p>

<h1>Listing Favorite Games</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Hours played</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_games.each do |favorite_game| %>
      <tr>
        <td><%= favorite_game.Game %></td>
        <td><%= favorite_game.hours_played %></td>
        <td><%= link_to 'Show', favorite_game %></td>
        <td><%= link_to 'Edit', edit_favorite_game_path(favorite_game) %></td>
        <td><%= link_to 'Destroy', favorite_game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Favorite game', new_favorite_game_path %>
